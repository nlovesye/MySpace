html{
    font-family: Arial,'Neue Helvetica',"microsoft yahei";
}
.banner{
    width:100;
    height:2.85rem;
    background:#fff;
    overflow:hidden;
    z-index:1000;
    position:relative;
}
.tag-img{
    overflow:hidden;
    position:absolute;
    z-index:-1;
    top:-3.7rem;
    left:0;
}
.tag-img img{
    width:100%;
    height:100%;
}
.mask{
    position:absolute;
    background:rgba(0,0,0,0.3);
    width:100%;
    height:100%;
    top:0;
    left:0;
}
.tag-name{
    position:relative;
    margin-top:0.58rem;
    text-align:center;
    color:#fff;
    font-size:0.36rem;
    font-weight:400;
}
.follow-btn img{
    margin-right:0.1rem;
    height:0.16rem;
    width:0.16rem;
}
.menu{
    overflow-y:hidden;
    margin:0.2rem;
}
.menu .tag-list{
    width:17.5rem;
    font-size:0;
}
.menu .tag-list li{
    display:inline-block;
    font-size:0.28rem;
    margin-left:0.1rem;
    height:0.7rem;
    background:#f5f8fa;
    color:#333;
    text-align:center;
    line-height:0.7rem;
    padding:0 0.27rem;
    border-radius:0.1rem;
}
.menu .tag-list li.listcolor{
    background:#c3dcea;
    color:#fff;
}
.menu .tag-list>li:nth-child(11){
    margin-right:0.1rem;
}
.menu-bottom{
    overflow:hidden;
    background:#fff;
    position: relative;
    border-top:1px solid #f5f5f5;
    border-bottom:1px solid #f5f5f5;
    font-size:0.28rem;
    height:0.9rem;
    line-height:0.9rem;
}
.menu-left{
    text-indent:0.2rem;
    position:absolute;
    float:left;
}
.menu-down{
    width:100%;
    text-align:center;  
    position:absolute;
    font-size:0.28rem;
    background:#fff;
    display:none;
    z-index:999;   
}
.menu-down li{
    height:0.9rem;
    line-height:0.9rem;
    border-bottom:1px solid #f5f5f5;
}
.fcolor{
    color:red;
}
.menu-left li{
    text-indent:0;
    margin-left:0;
    width:7.5rem;
    height:0.9rem;
    border-top:1px solid #f5f5f5;
    text-align:center;
}
.menu-left li:nth-child(1){
    border-top:none;
}
.menu-right{
    font-size:0;
    padding-right:0.2rem;
    float:right;
}
.menu-right span{
    margin-top:1px;
    font-size:0.28rem;
    display:inline-block;
    height:0.8rem;
    padding:0 0.4rem;
}
.active{
    border-bottom:2px solid red;
    color:red;
}
.shopping-branch{
    display:none;
}
::-webkit-scrollbar {
    display: none;
}