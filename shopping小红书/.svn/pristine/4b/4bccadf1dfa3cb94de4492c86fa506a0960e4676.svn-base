*{margin: 0;padding: 0;}
html,body {  font-size:14px; height:100%;font-family: "黑体 Helvetica Neue,Helvetica,Arial,sans-serif";background: #f5f8fa;  }
li{list-style: none;}
a{text-decoration: none;}
.clearfix{
    zoom: 1;
}
.clearfix:after{
    width: 0;
    height: 0;
    content: "";
    clear: both;
    visibility: hidden;
    display: block;
}
::-webkit-scrollbar {
    display: none;
}

header{
    width: 100%;
    height: 2.8rem;
    background: #fff;
    overflow: hidden;
    position: relative;
}
header h3{
    width: 100%;
    margin-top: -3.4rem;
}
header h3 img{
    max-width: 100%;
}
header .mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
}
header h2{
    text-align: center;
    position: absolute;
    top: 0.6rem;
    color: #fff;
    width: 100%;
    font-size: 0.36rem;
    font-weight: 400;
}
header button{
    position: absolute;
    width: 1.42rem;
    height: 0.52rem;
    border-radius: 0.08rem;
    background: #ff2741;
    right: 0.3rem;
    top: 0.6rem;
    border: none;
    outline: none;
    font-size: 0.24rem;
    line-height: 0.52rem;
    color: #fff;
    text-indent: 0.22rem;
}
header button i{
    position: absolute;
    font-size: 0.24rem;
    line-height: 0.52rem;
    color: #fff;
    left: 0.1rem;
}
header .txt{
    position: absolute;
    top: 1.4rem;
    width: 90%;
    overflow: hidden;
    font-size: 0.24rem;
    line-height: 0.36rem;
    color: #fff;
    padding: 0 5%;
    text-indent: 0.48rem;
}

.list{
    width: 100%;
    height: 1.2rem;
    background: #fff;
}
.list ul{
    height: 100%;
    padding: 0 0.3rem;
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;
}
.list ul li{
    display: inline-block;
    background: #f5f8fa;
    border-radius: 0.1rem;
    padding: 0rem 0.3rem;
    font-size: 0.28rem;
    line-height: 0.68rem;
    margin: 0.26rem 0.1rem 0.26rem 0;
}
.list ul li.active{
    background: rgb(195,220,234);
    color: #fff;
}

.nav{
    width: 100%;
    height: 0.9rem;
    background: #fff;
    border-top: 0.01rem solid #eee;
    border-bottom: 0.01rem solid #eee;
    line-height: 0.9rem;
}
.nav .select{
    width: 30%;
    height: 100%;
    margin-left: 0.3rem;
    float: left;
}
.nav .select .txt{
    font-size: 0.28rem;
    color: #333;
}
.nav .select .icon{
    display: inline-block;
    width: 0rem;
    height: 0rem;
    border-bottom: 0.04rem solid transparent;
    border-right: 0.08rem solid transparent;
    border-top: 0.08rem solid #ccc;
    border-left: 0.08rem solid transparent;
    margin-left: 0.1rem;
    transition: all 200ms;
    transform-origin: 50% 0.04rem;
}
.nav .right{
    width: 40%;
    float: right;
    height: 100%;
}
.nav .right>div{
    height: 100%;
    box-sizing: border-box;
    width: 40%;
    font-size: 0.28rem;
    float: left;
    text-align: center;
    color: #333;
}
.nav .right>div.active{
    color: #ff2741;
    border-bottom: 0.04rem solid #ff2741;
}
.navlist{
    background: #fff;
    width: 100%;
    position: absolute;
    display: none;
}
.navlist ul{
    width: 100%;
}
.navlist ul li{
    text-align: center;
    width: 100%;
    height: 0.8rem;
    line-height: 0.8rem;
    font-size: 0.28rem;
    color: #333;
    border-bottom: 0.01rem solid #eee;
}
.navlist ul li.active{
    color: red;
}

.notes-list{
    width: 100%;
}
.notes-list .leftside{
    float: left;
    width: 44%;
    margin: 4% 2% 4% 4%;
}
.notes-list .leftside li{
    width: 100%;
    background: #fff;
    margin-bottom: 0.2rem;
}
.notes-list .leftside li a{
    color: #333;
}
.notes-list .leftside li a>img{
    min-width: 100%;
}
.notes-list .leftside li a h3{
    font-size: 0.24rem;
    text-indent: 0.22rem;
    line-height: 200%;
}
.notes-list .leftside li a .info{
    display: -webkit-box;
    font-size: .24rem;
    margin-bottom: .15rem;
    overflow: hidden;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    padding: 0 0.12rem;
}
.notes-list .leftside li a .author{
    padding: 0 0.12rem;
    height: 0.8rem;
}
.notes-list .leftside li a .author img{
    border-radius: 50%;
    max-width: 0.5rem;
    float: left;
    margin: .15rem;
}
.notes-list .leftside li a .author .name{
    float: left;
    width: 1.5rem;
    height: .8rem;
    color: #666;
    overflow: hidden;
    line-height: .8rem;
    font-size: .24rem
}
.notes-list .leftside li a .author .shoucang{
    float: right;
    min-width: 0.6rem;
    text-align: center;
    font-size: .2rem;
    line-height: 0.8rem;
}
.notes-list .rightside{
    float: right;
    width: 44%;
    margin: 4% 4% 4% 2%;
}
.notes-list .rightside li{
    width: 100%;
    height: 0.9rem;
    background: #fff;
    margin-bottom: 0.2rem;
}