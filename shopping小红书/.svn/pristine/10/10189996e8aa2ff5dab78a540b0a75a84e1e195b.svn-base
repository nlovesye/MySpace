*{
    box-sizing:boeder-box;
}
@font-face {
  font-family: 'iconfont';
  src: url('../fonts/iconfont.eot');
  src: url('../fonts/iconfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/iconfont.woff') format('woff'),
  url('../fonts/iconfont.ttf') format('truetype'),
  url('../fonts/iconfont.svg#iconfont') format('svg');
}
.iconfont{
  font-family:"iconfont" !important;
  font-size:16px;font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
li{
  float: left;
  list-style: none;
}
a{
  text-decoration: none;
  color: #000;
}
body{
  background:rgb(245,248,250);
}

/*头部*/
.header{
  width: 100%;
  height: 0.88rem;
  position: relative;
  background: #fff;
}
.header img{
  height: 1.16rem;
  height: 0.40rem;
  float: left;
  margin:0.2rem;
}
.header ul{
  width: 2.50rem;
  width: 100%;
  background: pink;
}
.header li{
  font-size: 0.32rem;
  padding-left: 0.4rem;
  line-height: 0.88rem;
  text-align: center;
}
.header .current a{
  color:rgb(255,39,65);
}
.header img:nth-child(3){
  margin-left: 0.7rem;
  width: 0.35rem;
  height: 0.34rem;
  margin-top: 0.26rem;
}

/*导航*/
.nav{
  height: 0.88rem;
  overflow-X: scroll;
  background: #fff;
}
.nav .title{
  width: 16rem;
  height: 0.8rem;
  color: gray;
}
.nav span{
  display: block;
  float: left;
  font-size: 0.30rem;
  padding: 0 0.15rem;
  width: 0.93rem;
  height: 0.8rem;
  text-align: center;
  line-height: 0.8rem;
}
.nav a{
  color: gray;
}
.nav .bottom_style{
  border-bottom: 1px solid rgb(255,39,65);
}

/*图片区*/
.menu_left{
  float: left;
  margin: -0.2rem 0.15rem 0 0.15rem;
}
.menu .one{
  margin-top: 0.2rem;
  width: 3.5rem;
  background: #fff;
  border:1px solid rgb(234,234,234);
  overflow: hidden;
}
.menu .one img{
  width: 3.5rem;
}
.menu .one p:nth-child(2){
  font-size: 0.26rem;
  display: block;
  width: 3.2rem;
  padding-left: 0.15rem;
}
.menu .one p:nth-child(3){
  font-size: 0.24rem;
  display: block;
  width: 3.2rem;
  color: gray;
  padding-left: 0.1rem;
  margin-top: 0.2rem;
}
.menu .one .writer{
  width: 100%;
  height: 0.8rem;
  margin-top:0.2rem;
}
.menu .one .writer ul{
  width: 100%;
}
.menu .one .writer li{
  float: left;
}
.menu .one .writer li:nth-child(1) img{
  width: 0.8rem;
  height: 0.8rem;
  display: block;
  border-radius: 50%;
}
.menu .one .writer li:nth-child(2) p{
  font-size: 0.24rem;
  font-weight: normal;
  color: gray;
  width: 1.5rem;
  line-height: 0.8rem;
  margin-left: 0.1rem;
}
.menu .one .writer li:nth-child(3) img{
  width: 0.22rem;
  height: 0.24rem;
  margin-bottom: 0.4rem;
  margin-left: 0.2rem;
}
.menu .one .writer li:nth-child(4) p{
  font-size: 0.26rem;
  font-weight: 600;
  color: rgb(153,153,153);
  margin-top: 0.25rem;
  margin-left: 0.1rem;
}
